{
    "name": "northeastern-web/pim-fim-adapter",
    "description": "PIM/FIM 2.0 Adapter Composer Package",
    "keywords": [
        "northeastern-web",
        "PIM adapter",
        "FIM adapter"
    ],
    "autoload": {
        "files": [
            "src/Helpers/getAllContentfulEntries.php",
            "src/Helpers/mapEntriesToModel.php"
        ],
        "psr-4": {
            "Northeastern\\PIMFIMAdapter\\": "src"
        }
    },
    "authors": [
        {
            "name": "ITS Web Solutions",
            "email": "websolutions@northeastern.edu"
        }
    ],
    "license": "MIT",
    "minimum-stability": "stable",
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "contentful/contentful": "^7.0",
        "illuminate/support": "^11.12",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0"
    }
}
